<!--pages/timeline/timeline.wxml-->

<wxs src="./timeline.wxs" module="wxs"/>
<view class="page_body">
    <scroll-view class="timeline_container" scroll-x="1">
        <scroll-view class="timeline_header" scroll-x="1">
            <block wx:for="{{[0,1,2,3,4,5,6]}}" wx:key="*this" wx:for-item="i">
                <view class="date" hover-class="hover" hover-stay-time="100"
                 id="date{{i}}" data-i-Date="{{i}}" bind:tap="{{wxs.tapDate}}">
                    <view class="day">{{Month[i]}}-{{Day[i]}}</view>
                    <view class="week">{{Week[i]}}</view>
                </view>
            </block>
        </scroll-view>
        <swiper class="timeline_body" easing-function="easeInCubic" duration="150" current="{{swiperCurrent}}"
         bind:change="{{wxs.changeSwiper}}">
            <block wx:for="{{[0,1,2,3,4,5,6]}}" wx:key="*this" wx:for-item="i">
                <swiper-item >
                    <view>test{{i}}</view>
                </swiper-item>
            </block>
        </swiper>
    </scroll-view>
</view>